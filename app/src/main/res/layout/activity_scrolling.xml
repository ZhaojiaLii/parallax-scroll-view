<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ScrollingActivity">
    <com.example.zoomparallax.CustomeViews.FLexibleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/fv"
    >

        <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:background="#000"
                android:id="@+id/coor_layout">


            <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/appbarlayout">

                <android.support.design.widget.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:toolbarId="@+id/toolbar"
                        app:contentScrim="#000000"
                        app:statusBarScrim="#000000"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        android:id="@+id/collapsing_layout">

                    <android.support.v7.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="wrap_content"
                            android:layout_height="?attr/actionBarSize"
                            app:layout_collapseMode="pin"
                            android:theme="@style/Platform.ThemeOverlay.AppCompat.Light"
                            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                    />

                        <ImageView
                                android:id="@+id/iv"
                                android:layout_width="match_parent"
                                android:layout_height="500dp"
                                android:src="@drawable/avengers"
                                android:scaleType="centerCrop"
                                app:layout_collapseMode="parallax"
                                android:minHeight="0.5dp"/>


                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/header_btns">
                        <ImageView android:layout_width="250dp"
                                   android:layout_height="200dp"
                                   android:layout_marginTop="200dp"
                                   android:layout_gravity="center|top"
                                   android:src="@drawable/avengerstitle"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="32dp"
                                  android:id="@+id/name_cinema"
                                  android:textScaleX="0.7"
                                  android:paddingLeft="10dp"
                                  android:text="PATHE GAUMONT"
                                  android:textSize="28dp"
                                  android:textStyle="bold"
                                  android:textColor="#ffffff"/>
                        <Button android:layout_width="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_height="30dp"
                                android:text="Ma liste"
                                android:id="@+id/list"
                                android:textColor="#ffffff"
                                android:layout_gravity="right"
                                android:background="@drawable/shape"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                android:layout_marginRight="100dp"
                                android:layout_marginTop="400dp"
                                android:orientation="vertical">
                            <Button
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/shape"
                                    android:text="1"
                                    android:textSize="30dp"
                                    android:textStyle="bold"
                                    android:textColor="#fff"
                                    android:layout_gravity="center"
                                    android:id="@+id/info"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="+ d'infos"
                                      android:textSize="13dp"
                                      android:textColor="#ffffff"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                android:layout_marginTop="390dp"
                                android:orientation="vertical">
                            <Button
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/shape"
                                    android:text="2"
                                    android:textSize="30dp"
                                    android:textStyle="bold"
                                    android:textColor="#fff"
                                    android:layout_gravity="center"
                                    android:id="@+id/play"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Bande-annonce"
                                      android:textSize="13dp"
                                      android:textColor="#ffffff"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                android:layout_marginLeft="100dp"
                                android:layout_marginTop="400dp"
                                android:orientation="vertical">
                            <Button
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/shape"
                                    android:text="3"
                                    android:textSize="30dp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#fff"
                                    android:id="@+id/add"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Ajouter"
                                      android:textSize="13dp"
                                      android:textColor="#ffffff"/>
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:id="@+id/content"
                                 android:paddingTop="500dp">
                        <com.example.zoomparallax.CustomeViews.CustomFlingScrollView
                                tools:showIn="@layout/activity_scrolling"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:context=".ScrollingActivity"
                                android:id="@+id/nestedview">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="#000000">
                                <LinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal">
                                    <TextView android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:text="À l'affiche "
                                              android:textSize="20sp"
                                              android:textStyle="bold"
                                              android:textColor="#ffffff"/>
                                    <TextView android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:text=" autour de vous"
                                              android:textSize="15sp"
                                              android:textColor="#ffffff"/>
                                </LinearLayout>
                                <android.support.v7.widget.RecyclerView
                                        android:id="@+id/show1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:overScrollMode="always"/>
                                <Button android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Toute la programmation  >"
                                        android:background="@drawable/shape"
                                        android:height="20dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="15dp"
                                        android:width="300dp"
                                        android:textSize="20dp"
                                        android:textAllCaps="false"
                                />
                                <LinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:layout_marginTop="15dp"
                                              android:orientation="horizontal">
                                    <TextView android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:text="Déjà en vente"
                                              android:textColor="#ffffff"
                                              android:textSize="20sp"
                                              android:textStyle="bold"/>


                                </LinearLayout>
                                <android.support.v7.widget.RecyclerView
                                        android:id="@+id/show2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:overScrollMode="always"/>
                                <Button android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Toute afficher  >"
                                        android:background="@drawable/shape"
                                        android:height="20dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="15dp"
                                        android:width="200dp"
                                        android:textSize="20dp"
                                        android:textAllCaps="false"
                                />



                            </LinearLayout>


                        </com.example.zoomparallax.CustomeViews.CustomFlingScrollView>

                    </FrameLayout>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>


        </android.support.design.widget.CoordinatorLayout>
        <!--<TextView android:layout_width="match_parent"-->
                  <!--android:layout_height="wrap_content"-->
                  <!--android:text="2222222222222222222222222222"-->
                  <!--android:background="#578493"-->
                  <!--android:textColor="#fff"-->
                  <!--android:textSize="80dp"/>-->


    </com.example.zoomparallax.CustomeViews.FLexibleLayout>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000"
            android:id="@+id/title"
            android:alpha="0"
            android:text="films"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:paddingBottom="5dp"
            android:gravity="center|bottom"
    />

</FrameLayout>
