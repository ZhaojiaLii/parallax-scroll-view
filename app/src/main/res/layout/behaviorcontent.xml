<?xml version="1.0" encoding="utf-8"?>
<com.example.zoomparallax.CustomeViews.DisInterceptNestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
android:tag="headercontent">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:id="@+id/header_btns">
        <ImageView android:layout_width="250dp"
                   android:layout_height="200dp"
                   android:layout_marginTop="200dp"
                   android:layout_gravity="center|top"
                   android:src="@drawable/avengerstitle"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="32dp"
                  android:id="@+id/name_cinema"
                  android:textScaleX="0.7"
                  android:paddingLeft="10dp"
                  android:text="PATHE GAUMONT"
                  android:textSize="28dp"
                  android:textStyle="bold"
                  android:textColor="#ffffff"/>
        <Button android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_height="30dp"
                android:text="Ma liste"
                android:id="@+id/list"
                android:textColor="#ffffff"
                android:layout_gravity="right"
                android:background="@drawable/shape"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginRight="100dp"
                android:layout_marginTop="400dp"
                android:orientation="vertical">
            <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:text="1"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:id="@+id/info"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="+ d'infos"
                      android:textSize="13dp"
                      android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="390dp"
                android:orientation="vertical">
            <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shape"
                    android:text="2"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:id="@+id/play"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Bande-annonce"
                      android:textSize="13dp"
                      android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="400dp"
                android:orientation="vertical">
            <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:text="3"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:id="@+id/add"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Ajouter"
                      android:textSize="13dp"
                      android:textColor="#ffffff"/>
        </LinearLayout>
    </FrameLayout>

</com.example.zoomparallax.CustomeViews.DisInterceptNestedScrollView>